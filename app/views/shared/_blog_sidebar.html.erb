<div class="col-sm-3 offset-sm-1 blog-sidebar">
  <div class="sidebar-module sidebar-module-inset">
    <h4>Hello!</h4>
    <p>Welcome to <em>Chase Story's </em> Blog</p>
  </div>

  <%= source_helper("alert alert-info blog-sidebar-source") %>

  
  <div class="sidebar-module">
    <h4>Topics</h4>
    <% unless @side_bar_topics.nil? %>
      <% @side_bar_topics.each do |topic| %>
        <p><%= link_to topic.title, topic_path(topic) %></p>
      <% end %>
    <% end %>

  </div>

  <div class="sidebar-module">
    <h4>About Me</h4>
    <ol class="list-unstyled social-links">
      <li><a href="https://github.com/chasestory"><%= fa_icon "github" %> </a></li>
      <li><a href="https://instagram.com/chasestory1"><%= fa_icon "instagram" %> </a></li>
      <li><a href="https://twitter.com/ChaseStoryDev"><%= fa_icon "twitter" %> </a></li>
      <li><a href="https://www.facebook.com/ChaseLStory"><%= fa_icon "facebook" %> </a></li>
    </ol>
  </div>
</div>