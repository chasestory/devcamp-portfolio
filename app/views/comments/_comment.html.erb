<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-md-2">
          <%= gravatar_helper comment.user %>
        </div>
      </div>
        <div class="col-md-12"style="margin:1px;" >
          <%= comment.content %>
        </div>

        <div class="comment-attribution" style="margin-left:20px;">
            Comment posted by <span class="comment-name"> <%= comment.user.first_name %></span> <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
        </div>

    </div>
  </div>
</div>