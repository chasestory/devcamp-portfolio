<div class="album text-muted">
  <div class="container">
    <%= source_helper("alert alert-warning") %>
    <% if logged_in?(:root_admin) %>
      <div class="col-md-12">
        <%= link_to "New Item", new_portfolio_path(@portfolio_item), class: 'btn btn-primary' %>
      </div>
      <% end %>
    <div class="row <%= "sortable" if logged_in?(:root_admin) %>">
      <%= render partial: 'portfolio_item', collection: @portfolio_items %>
    </div>
  </div>
</div>